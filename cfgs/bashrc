[[ ! "$-" =~ i ]] && return

HISTCONTROL='ignoredups'
HISTFILE="$HOME/.bashhst"
HISTFILESIZE=999999
HISTSIZE=99999
PS1='$ $?: '

bind "\C-l":clear-screen
bind -r "\C-s"
bind -r "\C-p"
bind "\C-s":vi-movement-mode
bind "\C-x":vi-movement-mode
bind "\C-a":beginning-of-line
bind "\C-e":end-of-line
bind "\C-f":reverse-search-history
bind '"\C-n":"nohup st 1>/dev/null 2>&1 &\n"'
bind '"\C-r":". ~/.bashrc\n"'
bind '"\C-p":" | "'
bind '"\e[1;3P":"| grep -F "'

set -o vi
shopt -s autocd
shopt -s checkwinsize
shopt -s cmdhist
shopt -s histappend
stty stop ''
ulimit -c 1000

. /usr/subr/dl
. /etc/aliasrc
. "$HOME"/.bashfunc

alias vt='v ~/.tasks'
alias vct='v ~/.ctasks'
alias vtmp='v ~/sb/vtmp'
alias globaldiffmgr='find ~/sftwr/mgit/lancia-utils/* -type f | xargs diffmgr'
alias d='diffmgr *'
alias trrm=transmission-remote
