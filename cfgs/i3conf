set $alt Mod1
set $ash Mod1+Shift
set $win Mod4
floating_modifier $win

default_border pixel 1
default_floating_border pixel 1
default_orientation horizontal
font pango:monospace 11

bindsym $win+c kill
bindsym $win+Shift+r reload
bindsym $win+Shift+q exit
bindsym $win+n focus down
bindsym $win+m focus up
bindsym $win+period focus right
bindsym $win+comma focus left
bindsym $win+Shift+n move down
bindsym $win+Shift+m move up
bindsym $win+Shift+period move right
bindsym $win+Shift+comma move left
bindsym $win+h split v
bindsym $win+v split h
bindsym $win+f fullscreen toggle
bindsym $win+s layout stacking
bindsym $win+w layout tabbed
bindsym $win+e layout toggle split

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $ws11 "11"
set $ws12 "12"
bindsym $win+1 workspace number $ws1
bindsym $win+2 workspace number $ws2
bindsym $win+3 workspace number $ws3
bindsym $win+4 workspace number $ws4
bindsym $win+5 workspace number $ws5
bindsym $win+6 workspace number $ws6
bindsym $win+7 workspace number $ws7
bindsym $win+8 workspace number $ws8
bindsym $win+9 workspace number $ws9
bindsym $win+0 workspace number $ws10
bindsym $win+minus workspace number $ws11
bindsym $win+plus workspace number $ws12
bindsym $win+Shift+1 move container to workspace number $ws1
bindsym $win+Shift+2 move container to workspace number $ws2
bindsym $win+Shift+3 move container to workspace number $ws3
bindsym $win+Shift+4 move container to workspace number $ws4
bindsym $win+Shift+5 move container to workspace number $ws5
bindsym $win+Shift+6 move container to workspace number $ws6
bindsym $win+Shift+7 move container to workspace number $ws7
bindsym $win+Shift+8 move container to workspace number $ws8
bindsym $win+Shift+9 move container to workspace number $ws9
bindsym $win+Shift+0 move container to workspace number $ws10
bindsym $win+Shift+minus move container to workspace number $ws11
bindsym $win+Shift+plus move container to workspace number $ws12

mode "resize" {
        bindsym comma resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt
        bindsym h mode "default"
        bindsym Escape mode "default"
}
bindsym $win+r mode "resize"

bar {
        status_command i3status
}

bindsym $win+Return exec st
bindsym $win+Shift+Return exec dexec -s
bindsym $win+Shift+Delete exec chromium

bindsym --release Print exec  screenshot region
bindsym --release $win+Print exec  screenshot full
bindsym --release $win+Scroll_Lock exec xlock
