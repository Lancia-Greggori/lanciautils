#!/usr/bin/openrc-run
depend() {
	after local
	before getty
	keyword -shutdown
}
start() {
	DIR='/mnt/strg/enc'
	if [ ! -e "$DIR" ]; then
		echo "encrypted storage at $DIR does not exist, skipping unlocking..."
		exit 0
	fi
	read -r -p 'unlock encrypted storage? ' ANSW
	if [ "$ANSW" = 'y' ]; then
		fscrypt unlock "$DIR"
	else
		exit 0
	fi
}
