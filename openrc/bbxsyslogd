#!/usr/bin/openrc-run

command='/usr/bbx/syslogd'
command_args='-n -s 2000 -b 5 -t -D -O /var/log/mssgs'
supervisor='supervise-daemon'

depend() {
	need localmount
	use clock hostname
	after bootmisc
	provide logger
}

start_pre() {
	if [ ! -e "$command" ]; then
		eerror "$command does nexist"
		return 1
	fi
}
