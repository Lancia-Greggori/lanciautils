#!/usr/bin/openrc-run
depend() {
	after local
	before getty
	keyword -shutdown
}
start() {
	D='/mnt/strg/enc'

	if [ ! -e "$D" ]; then
		echo "encrypted storage at $D does nexist, skipping unlocking..."
		exit 0
	fi

	read -r -p 'unlock encrypted storage? ' A
	if [ "$A" = 'y' ]; then
		fscrypt unlock "$D"
	else
		exit 0
	fi
}
