#!/usr/bin/ash
run_hook(){
	FILE='/sys/class/rtc/rtc0/wakealarm'
	EPOCH="$(date '+%s')"
	if ! echo 0 > "$FILE"; then
		reboot -f
	elif ! echo "$((EPOCH + 2))" > "$FILE"; then
		reboot -f
	elif ! echo mem > /sys/power/state; then
		reboot -f
	fi
	sleep 1s
	hdparm --security-freeze '/dev/disk/by-id/ata-Samsung_SSD_860_EVO_250GB_S59WNMFN802543N'
}
