#!/bin/sh -eu

. /usr/subr/o

if [ "$#" -lt 2 ]; then
	echo "USAGE: $PRGN @src @tgt #perm"
	exit 1
elif [ -L "$1" ] || [ -L "$2" ]; then
	perrex 'src or file cant be link' 2
elif [ ! -f "$1" ]; then
	perrex 'src must be a file' 3
fi

if [ -d "$2" ]; then
	TGT="${2%/}/${1##*/}"
else
	TGT="$2"
fi

if [ "$#" -lt 3 ]; then
	if [ -d "$2" ]; then
		PERM=0644
	elif [ -f "$2" ]; then
		PERM="$(stat -c "%a" "$2")"
	fi
else
	PERM="$3"
fi

if [ "$(id -u)" -eq 0 ]; then
	F=/letc/swfl
else
	F="$HOME"/.swfl
fi

L="$(readlink -f "$1"):$TGT:$PERM"
grep -q "^$L\$" "$F" &&
	perrex "$1: line already added" 5
grep -q "^${L%%:*}:" "$F" &&
	perrex "$1: src file already added" 6
exec echo "$L" >>"$F"
