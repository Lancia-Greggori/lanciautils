#!/bin/sh -eu
[ "$#" -gt 1 ] && exit 1
. /usr/subr/out
if [ "$PROGN" != 'poweroff' ] && [ "$PROGN" != 'reboot' ]; then
	exit 2
fi
O="$(who)"
echo "$O" | cut -d' ' -f1 | grep -Fvq "$USER" && {
	perr "somebody else is logged in, cannot poweroff:"
	echo "$O"
	exit 3
}
[ "$#" -eq 1 ] && case "$1" in
	-f|--force) exec loginctl "$PROGN";;
	*) exit 4 ;;
esac
pgrep Xorg 1>/dev/null && {
	perrexit "an Xorg session is already running, cannot $PROGN" 5
}
loginctl "$PROGN"
