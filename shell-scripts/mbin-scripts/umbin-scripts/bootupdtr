#!/bin/sh -e
. /usr/subr/out
trap 'echo "INTERRUPTED"; exit 130' INT
if [ "$1" = '--reinstall-grub' ]; then
	reinstall-grub
fi
printf 'mkinitcpio -P: '
mkinitcpio -P 1>/dev/null && echo SUCC
grub-mkconfig -o /boot/grub/grub.cfg 2>&1 | grep -Fv \
	-e 'Warning: os-prober will not be executed to detect other bootable partitions.' \
	-e 'Systems on them will not be added to the GRUB boot configuration.' \
	-e 'Check GRUB_DISABLE_OS_PROBER documentation entry.'
