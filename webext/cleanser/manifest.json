{
	"name": "cleanser",
	// won't work on manifest version 3
	"manifest_version": 2,
	"version": "1.0",
	"browser_specific_settings": {
		"gecko": {
		  "id": "cleanser@nodomain.com"
		}
	},
	"content_scripts": [
		{
			"js": ["hide.js"],
			"run_at": "document_start",
			"matches": ["*://*/*"]
		}, {
			"js": ["cleanser.js"],
			"run_at": "document_end",
			"matches": ["*://*/*"]
		}, {
			"js": ["show.js"],
			"run_at": "document_end",
			"matches": ["*://*/*"]
		}
	],
	"background": {
		"scripts": ["cmds.js"]
	},
	"permissions": ["*://*/*", "scripting"],
	"commands": {
		"unhideelmnts": {
			"suggested_key": {
				"default": "F1"
			}
		},
		"invert-imgs": {
			"suggested_key": {
				"default": "F2"
			}
		}
	}
}
